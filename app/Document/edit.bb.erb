<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @document.object %>
    <h1>Edit <%= @document.ows_DocIcon%></h1>
    <%= link_to "Delete", :action => :delete, :id => @document.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @document.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Ows docicon: </td>
              <td class="itemValue"><input type="text" name="document[ows_DocIcon]" value="<%= @document.ows_DocIcon %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ows fileref: </td>
              <td class="itemValue"><input type="text" name="document[ows_FileRef]" value="<%= @document.ows_FileRef %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ows fileleafref: </td>
              <td class="itemValue"><input type="text" name="document[ows_FileLeafRef]" value="<%= @document.ows_FileLeafRef %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ows uniqueid: </td>
              <td class="itemValue"><input type="text" name="document[ows_UniqueId]" value="<%= @document.ows_UniqueId %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ows id: </td>
              <td class="itemValue"><input type="text" name="document[ows_ID]" value="<%= @document.ows_ID %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ows  level: </td>
              <td class="itemValue"><input type="text" name="document[ows__Level]" value="<%= @document.ows__Level %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ows approved: </td>
              <td class="itemValue"><input type="text" name="document[ows_Approved]" value="<%= @document.ows_Approved %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ows editor: </td>
              <td class="itemValue"><input type="text" name="document[ows_Editor]" value="<%= @document.ows_Editor %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ows modified: </td>
              <td class="itemValue"><input type="text" name="document[ows_Modified]" value="<%= @document.ows_Modified %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ows linkfilename: </td>
              <td class="itemValue"><input type="text" name="document[ows_LinkFilename]" value="<%= @document.ows_LinkFilename %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
